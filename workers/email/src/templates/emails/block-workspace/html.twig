{% extends '../../components/layout.twig' %}

{% block header %}
    {% include '../../components/workspace.twig' with {workspace: workspace} %}
{% endblock %}

{% block content %}
    <tr>
        <td>
            <img src="{{ hostOfStatic }}/email/low-balance-icon.png" width="32" height="32" hspace="3"
                 style="display: block; vertical-align: middle; margin: 23px auto 0;">
        </td>
    </tr>
    <tr>
        <td align="center" style="padding: 15px 0;">
            <font color="#dbe6ff" style="font-size: 15px; text-align: center; color: #dbe6ff; letter-spacing: 0.4px;">
				<span style="vertical-align: middle; display: inline-block;">
					Workspace was blocked
				</span>
            </font>
        </td>
    </tr>
    <tr>
        <td style="display: block; padding: 20px; margin-bottom: 30px; border-width: 1px; border-color: #494f5e; border-style: solid; border-radius: 10px; line-height: 1.3">
            Your workspace was blocked because there isn't actual subscription. Please, check payment settings of workspace and renew subscription.
        </td>
    </tr>
    <tr>
        <td style="padding-right: 20px; padding-left: 20px; padding-bottom: 40px;">
            {% include '../../components/button.twig' with {href: host ~ '/workspace/' ~ workspace._id ~ '/billing', label: 'Go to payment settings'} %}
        </td>
    </tr>
{% endblock %}

{% block unsubscribeLink %}
    {{ host ~ '/account/notifications' }}
{% endblock %}

{% block unsubscribeText %}
    You received this email because you are currently opted in to receive such alerts via your
    personal notifications settings. You may adjust your preferences at any time by clicking
    the link above.
{% endblock %}
