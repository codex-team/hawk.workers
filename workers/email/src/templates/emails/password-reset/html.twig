{% extends '../../components/layout.twig' %}

{% block content %}
  <tr>
    <td>
      <img src="{{ hostOfStatic }}/email/payment-success-icon.png" width="32" height="32" hspace="3" style="display: block; vertical-align: middle; margin: 0 auto; margin-top: 23px;">
    </td>
  </tr>
  <tr>
    <td style="padding-top: 15px; padding-right: 0; padding-left: 0; padding-bottom: 15px; text-align: center;">
      <font color="#dbe6ff" style="font-size: 15px; color: #dbe6ff; letter-spacing: 0.4px;">
        Your password has been reset 
      </font>
    </td>
  </tr>
  <tr>
  <td style="display: block; padding-top: 20px; padding-right: 20px; padding-bottom: 20px; padding-left: 20px; margin-bottom: 30px; border-width: 1px; border-color: #494f5e; border-style: solid; border-radius: 10px; line-height: 1.47">
    <font color="#dbe6ff" style="font-size: 15px; letter-spacing: 0.4px;">
      Thank you for using Hawk. Use this password to sign in.<br><br>
      Your new password: <font style="font-weight: bold;">{{ password }}</font>
    </font>
  </td>
</tr>
  <tr>
    <td style="padding-right: 20px;padding-left: 20px;padding-bottom: 40px;">
      {% include '../../components/button.twig' with {href: host ~ '/login', label: 'Sign in'} %}
    </td>
  </tr>

{% endblock %}