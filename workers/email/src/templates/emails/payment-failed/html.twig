{% extends '../../components/layout.twig' %}

{% block header %}
  {% include '../../components/workspace.twig' with {workspace: workspace} %}
{% endblock %}

{% block content %}
<tr>
  <td>
    <img src="{{ hostOfStatic }}/email/low-balance-icon.png" width="32" height="32" hspace="3" style="display: block; vertical-align: middle; margin: 0 auto; margin-top: 23px;">
  </td>
</tr>
<tr>
  <td align="center" style="padding-top: 15px; padding-right: 0; padding-left: 0; padding-bottom: 15px;">
    <font color="#dbe6ff" style="font-size: 15px; text-align: center; color: #dbe6ff; letter-spacing: 0.4px;">
      <span style="vertical-align: middle; display: inline-block;">
        Rejection reason: {{ reason }}
      </span>
    </font>
  </td>
</tr>
{% endblock %}

{% block unsubscribeLink %}
  {{ host ~ '/account/notifications' }}
{% endblock %}

{% block unsubscribeText %}
  You received this email because you are currently opted in to receive such alerts via your
  personal notifications settings. You may adjust your preferences at any time by clicking
  the link above.
{% endblock %}
