{% extends '../../components/layout.twig' %}

{% block header %}
  {% include '../../components/workspace.twig' with {workspace: workspace} %}
{% endblock %}

{% block content %}
<tr>
  <td>
    <img src="{{ hostOfStatic }}/email/low-balance-icon.png" width="32" height="32" hspace="3" style="display: block; vertical-align: middle; margin: 0 auto; margin-top: 23px;">
  </td>
</tr>
<tr>
  <td align="center" style="padding-top: 15px; padding-right: 0; padding-left: 0; padding-bottom: 15px;">
    <font color="#dbe6ff" style="font-size: 15px; text-align: center; color: #dbe6ff; letter-spacing: 0.4px;">
      <span style="vertical-align: middle; display: inline-block;">
        Your payment has been failed
      </span>
    </font>
  </td>
</tr>
<tr>
  <td style="display: block; padding-top: 20px; padding-right: 20px; padding-bottom: 20px; padding-left: 20px; margin-bottom: 30px; border-width: 1px; border-color: #494f5e; border-style: solid; border-radius: 10px; line-height: 1.47">
    <font color="#dbe6ff" style="font-size: 15px; letter-spacing: 0.4px;">
      The payment attempt for &laquo;{{ workspace.name | escape }}&raquo; monthly plan was rejected
      because of {{ reason }}.<br>
      Contact <b>support@hawk.so</b> for more details.
    </font>
  </td>
</tr>
<tr>
  <td style="padding-right: 20px;padding-left: 20px;padding-bottom: 40px;">
    {% set url = host ~ '/workspace/' ~ workspace._id ~ '/settings/billing' %}
    {% include '../../components/button.twig' with {href: url, label: 'Go to payment settings'} %}
  </td>
</tr>
{% endblock %}
