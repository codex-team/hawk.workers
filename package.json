{
    "name": "hawk.workers",
    "private": true,
    "version": "0.0.1",
    "description": "Hawk workers",
    "repository": "git@github.com:codex-team/hawk.workers.git",
    "license": "UNLICENSED",
    "workspaces": [
        "workers/*"
    ],
    "scripts": {
        "test": "jest --coverage",
        "test:base": "jest lib/worker",
        "test:db": "jest lib/db/",
        "test:cache": "jest lib/cache",
        "test:javascript": "jest workers/javascript",
        "test:nodejs": "jest workers/nodejs",
        "test:slack": "jest workers/slack",
        "test:clear": "jest --clearCache",
        "lint": "eslint -c ./.eslintrc.js --ext .ts,.js --fix .",
        "migration-add": "migrate-mongo create",
        "migrate:up": "migrate-mongo up",
        "migrate:down": "migrate-mongo down",
        "worker": "ts-node -T ./runner.ts",
        "run-js": "yarn worker hawk-worker-javascript",
        "run-slack": "yarn worker hawk-worker-slack",
        "run-nodejs": "yarn worker hawk-worker-nodejs",
        "run-python": "yarn worker hawk-worker-python",
        "run-grouper": "yarn worker hawk-worker-grouper",
        "run-archiver": "yarn worker hawk-worker-archiver",
        "run-accountant": "yarn worker hawk-worker-accountant",
        "run-paymaster": "yarn worker hawk-worker-paymaster",
        "run-notifier": "yarn worker hawk-worker-notifier",
        "run-maps": "SIMULTANEOUS_TASKS=1 yarn worker hawk-worker-sourcemaps",
        "run-email": "yarn worker hawk-worker-email",
        "run-telegram": "yarn worker hawk-worker-telegram"
    },
    "dependencies": {
        "@hawk.so/nodejs": "^2.0.7",
        "@types/amqplib": "^0.5.13",
        "@types/jest": "^25.2.1",
        "@types/mongodb": "^3.5.15",
        "@types/node": "^13.13.4",
        "amqplib": "^0.5.5",
        "codex-accounting-sdk": "codex-team/codex-accounting-sdk",
        "debug": "^4.1.1",
        "dotenv": "^8.2.0",
        "hawk.types": "https://github.com/codex-team/hawk.types#workers",
        "lodash.mergewith": "^4.6.2",
        "migrate-mongo": "^7.2.1",
        "mockdate": "^3.0.2",
        "mongodb": "^3.5.7",
        "nanoid": "^3.1.10",
        "node-cache": "^5.1.2",
        "prom-client": "^12.0.0",
        "prometheus-gc-stats": "^0.6.2",
        "ts-node": "^8.10.1",
        "typescript": "^3.8.3",
        "uuid": "^8.3.0",
        "winston": "^3.2.1",
        "yup": "^0.28.5"
    },
    "devDependencies": {
        "@shelf/jest-mongodb": "^1.2.3",
        "eslint": "^6.8.0",
        "eslint-config-codex": "^1.3.4",
        "jest": "25.5.4",
        "nodemon": "^2.0.3",
        "random-words": "^1.1.1",
        "ts-jest": "25.4.0",
        "wait-for-expect": "^3.0.2",
        "webpack": "^4.43.0",
        "yargs": "^15.3.1"
    }
}
