{
    "name": "hawk.workers",
    "private": true,
    "version": "0.0.1",
    "description": "Hawk workers",
    "repository": "git@github.com:codex-team/hawk.workers.git",
    "license": "UNLICENSED",
    "workspaces": [
        "workers/*"
    ],
    "scripts": {
        "build": "tsc",
        "worker": "ts-node -T ./runner.ts",
        "migration-add": "migrate-mongo create",
        "migrate:up": "migrate-mongo up",
        "migrate:down": "migrate-mongo down",
        "lint": "eslint -c ./.eslintrc.js --ext .ts,.js --fix .",
        "test": "jest --coverage --runInBand",
        "test:base": "jest lib/worker",
        "test:db": "jest lib/db/",
        "test:cache": "jest lib/cache",
        "test:default": "jest workers/default",
        "test:sentry": "jest workers/sentry --config workers/sentry/jest.config.js",
        "test:javascript": "jest workers/javascript",
        "test:release": "jest workers/release",
        "test:slack": "jest workers/slack",
        "test:limiter": "jest workers/limiter",
        "test:grouper": "jest workers/grouper",
        "test:paymaster": "jest workers/paymaster",
        "test:notifier": "jest workers/notifier",
        "test:clear": "jest --clearCache",
        "run-default": "yarn worker hawk-worker-default",
        "run-sentry": "yarn worker hawk-worker-sentry",
        "run-js": "yarn worker hawk-worker-javascript",
        "run-slack": "yarn worker hawk-worker-slack",
        "run-grouper": "yarn worker hawk-worker-grouper",
        "run-archiver": "yarn worker hawk-worker-archiver",
        "run-accountant": "yarn worker hawk-worker-accountant",
        "run-paymaster": "yarn worker hawk-worker-paymaster",
        "run-notifier": "yarn worker hawk-worker-notifier",
        "run-release": "yarn worker hawk-worker-release",
        "run-email": "yarn worker hawk-worker-email",
        "run-telegram": "yarn worker hawk-worker-telegram",
        "run-limiter": "yarn worker hawk-worker-limiter"
    },
    "dependencies": {
        "@hawk.so/nodejs": "^3.1.1",
        "@hawk.so/types": "^0.1.16",
        "@types/amqplib": "^0.8.2",
        "@types/jest": "^25.2.1",
        "@types/mongodb": "^3.5.15",
        "@types/node": "^13.13.4",
        "amqplib": "^0.8.0",
        "codex-accounting-sdk": "codex-team/codex-accounting-sdk",
        "debug": "^4.1.1",
        "dotenv": "^8.2.0",
        "lodash.mergewith": "^4.6.2",
        "migrate-mongo": "^7.2.1",
        "mockdate": "^3.0.2",
        "mongodb": "^3.5.7",
        "nanoid": "^3.1.31",
        "node-cache": "^5.1.2",
        "prom-client": "^12.0.0",
        "prometheus-gc-stats": "^0.6.2",
        "short-number": "^1.0.7",
        "ts-node": "^8.10.1",
        "typescript": "^3.8.3",
        "uuid": "^8.3.0",
        "winston": "^3.2.1",
        "yup": "^0.28.5",        
        "@types/redis": "^2.8.28",
        "redis": "^4.7.0"
    },
    "devDependencies": {
        "@shelf/jest-mongodb": "^1.2.3",
        "eslint": "^7.14.0",
        "eslint-config-codex": "^1.6.1",
        "jest": "25.5.4",
        "nodemon": "^2.0.3",
        "random-words": "^1.1.1",
        "ts-jest": "25.4.0",
        "wait-for-expect": "^3.0.2",
        "webpack": "^4.43.0",
        "yargs": "^15.3.1"
    }
}
