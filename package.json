{
    "name": "hawk.workers",
    "private": true,
    "version": "0.0.1",
    "description": "Hawk workers",
    "repository": "git@github.com:codex-team/hawk.workers.git",
    "license": "UNLICENSED",
    "workspaces": [
        "workers/javascript",
        "workers/grouper",
        "workers/accountant",
        "workers/paymaster",
        "workers/source-maps",
        "workers/python",
        "workers/archiver",
        "workers/notifier"
    ],
    "scripts": {
        "test": "jest --coverage",
        "test:base": "jest lib/worker",
        "test:db": "jest lib/db/",
        "test:nodejs": "jest workers/nodejs",
        "lint": "eslint -c ./.eslintrc.js --ext .ts,.js --fix .",
        "migrate:up": "migrate-mongo up",
        "migrate:down": "migrate-mongo down",
        "worker": "ts-node ./runner.ts",
        "run-js": "yarn worker hawk-worker-javascript",
        "run-python": "yarn worker hawk-worker-python",
        "run-grouper": "yarn worker hawk-worker-grouper",
        "run-archiver": "yarn worker hawk-worker-archiver",
        "run-accountant": "yarn worker hawk-worker-accountant",
        "run-paymaster": "yarn worker hawk-worker-paymaster",
        "run-notifier": "yarn worker hawk-worker-notifier",
        "run-maps": "SIMULTANEOUS_TASKS=1 yarn worker hawk-worker-sourcemaps"
    },
    "dependencies": {
        "amqplib": "^0.5.5",
        "debug": "^4.1.1",
        "dotenv": "^8.0.0",
        "lodash.mergewith": "^4.6.2",
        "migrate-mongo": "^6.0.1",
        "mongodb": "^3.3.0-beta2",
        "prom-client": "^12.0.0",
        "winston": "^3.2.1",
        "yup": "^0.27.0"
    },
    "devDependencies": {
        "@codexteam/hawk.nodejs": "github:codex-team/hawk.nodejs#hawk2.0",
        "@shelf/jest-mongodb": "^1.1.5",
        "@types/amqplib": "^0.5.13",
        "@types/jest": "^24.0.18",
        "@types/mongodb": "^3.3.1",
        "@types/node": "^12.7.2",
        "eslint": "^6.1.0",
        "eslint-config-codex": "^1.3.2",
        "jest": "24.9.0",
        "nodemon": "^1.18.9",
        "random-words": "^1.1.0",
        "ts-jest": "24.0.2",
        "ts-node": "^8.3.0",
        "typescript": "^3.8.3",
        "webpack": "^4.39.3",
        "yargs": "^13.3.0"
    }
}
